{
  "compilerOptions": {
    "strict": false,
    "module": "es2020",
    "target": "es2020",
    "noImplicitAny": false,
    "removeComments": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "sourceMap": false,
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    }
  }
}